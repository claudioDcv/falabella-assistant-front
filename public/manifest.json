{
  "name": "Falabella Assistant",
  "version": "0.0.1",
  "description": "Falabella extension to compare prices.",
  "manifest_version": 2,
  "background": {
    "scripts": ["./background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "notifications",
    "<all_urls>"
  ],
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": "favicon-16.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": ["js/inject.js", "js/mustache.js"],
      "matches": ["https://www.amazon.com.mx/*"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "js/inject.js",
    "js/mustache.js",
    "templates/offer.html"
  ],
  "icons": {
    "16": "favicon-16.png",
    "32": "favicon-32.png",
    "48": "favicon-48.png",
    "128": "favicon-128.png"
  },
  "content_security_policy": "script-src 'self' https://www.gstatic.com; object-src 'self'"
}
